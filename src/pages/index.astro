        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a
              href="#home"
              class="text-xl font-bold text-indigo-600 dark:text-indigo-400"
              >TS</a
            >
          </div>
          <div class="flex items-center space-x-8">
            <a
              href="#experience"
              class="text-gray-800 dark:text-gray-200 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors font-medium"
              >Experience</a
            >
            <a
              href="#skills"
              class="text-gray-800 dark:text-gray-200 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors font-medium"
