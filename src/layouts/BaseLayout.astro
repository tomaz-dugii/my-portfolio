---
import '../styles/global.css';
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<html lang={lang}>
  <head>
    <MainHead
      title="Tomaž Starašinič - Portfolio"
      description="Portfolio of Tomaž Starašinič - Experienced Software Developer"
    />
  </head>
  <body
    class="min-h-screen bg-bg-primary dark:bg-bg-primary text-text-primary relative"
  >
    <Navigation pageTitle="TS" />
    <main id="main-content" class="pt-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>
