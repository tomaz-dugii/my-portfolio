---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
  name: string;
  subtitle: string;
  jobTitle: string;
  profileImage: string;
  align?: 'start' | 'center';
}

const {
  name,
  align = 'center',
  jobTitle,
  profileImage,
  subtitle,
}: Props = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const mail: string = 'tomaz.starasinic@gmail.com';
const github: string = 'https://github.com/tomaz-dugii';
const linkedin: string = 'https://www.linkedin.com/in/tomaz-starasinic/';
const linkedinTitle: string = 'LinkedIn';
const githubTitle: string = 'GitHub';
---

<section
  class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-b from-primary-50 to-white dark:from-gray-900 dark:to-gray-800 relative overflow-hidden"
  id="contact"
>
  <!-- Decorative pattern -->
  <div class="absolute inset-0 opacity-[0.15] dark:opacity-10">
    <div
      class="absolute h-[40rem] w-[40rem] -top-20 -left-20 bg-primary-600 dark:bg-primary-400 rounded-full mix-blend-multiply filter blur-3xl animate-blob"
    >
    </div>
    <div
      class="absolute h-[30rem] w-[30rem] -bottom-32 -right-16 bg-secondary-600 dark:bg-secondary-400 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute h-[35rem] w-[35rem] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-accent-pink dark:bg-accent-pink rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"
    >
    </div>
  </div>

  <div class="max-w-7xl mx-auto relative">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Profile Image - First on mobile, second on desktop Right Column -->
      <div class="flex justify-center lg:order-2 lg:justify-end">
        <div
          class="w-80 h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden shadow-2xl border-4 border-primary-600 dark:border-primary-400"
        >
          <img
            src={profileImage}
            alt="Profile photo"
            class="w-full h-full object-cover object-center"
          />
        </div>
      </div>

      <!-- Left Column - Text Content -->
      <div
        class="flex flex-col items-center lg:items-start space-y-8 lg:order-1 text-center lg:text-left"
      >
        <div class="">
          <h1
            class="text-5xl font-bold mb-3 bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-pink dark:from-primary-400 dark:via-secondary-400 dark:to-accent-pink bg-clip-text text-transparent"
          >
            {name}
          </h1>
          <div class="text-2xl text-gray-700 dark:text-gray-300 mb-8">
            <p>{jobTitle}</p>
            <p>{subtitle}</p>
          </div>
        </div>

        <!-- Contact Information -->
        <div
          class="flex flex-wrap justify-center sm:justify-start gap-2 sm:gap-6 text-gray-800 dark:text-gray-200"
        >
          <a
            href={`mailto:${mail}`}
            class="flex items-center gap-2 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            {mail}
          </a>
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            {t('hero.location')}
          </div>
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
            {githubTitle}
          </a>
          <a
            href={linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
            {linkedinTitle}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
