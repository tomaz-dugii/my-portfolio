---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Experience Section -->
<section id="experience" class="py-20 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2
      class="text-3xl font-bold mb-8 text-primary-600 dark:text-primary-400 flex items-center gap-3"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
        ></path>
      </svg>
      {t('experience.title')}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Current Position -->
      <div
        class="bg-white dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600 h-full shadow-md hover:shadow-lg transition-shadow"
      >
        <h3
          class="text-2xl font-semibold text-primary-600 dark:text-primary-400"
        >
          {t('experience.mobileDeveloper')}
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Noctocode d.o.o / 2024 - 2025
        </p>
        <ul
          class="list-disc list-inside list-indent space-y-2 text-gray-700 dark:text-gray-300"
        >
          <li>{t('experience.noctocode.description1')}</li>
          <li>{t('experience.noctocode.description2')}</li>
          <li>{t('experience.noctocode.description3')}</li>
          <li>{t('experience.noctocode.description4')}</li>
        </ul>
      </div>

      <div
        class="bg-white dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600 h-full shadow-md hover:shadow-lg transition-shadow"
      >
        <h3
          class="text-2xl font-semibold text-primary-600 dark:text-primary-400"
        >
          {t('experience.leadIOSDeveloper')}
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Global Distress Technologies / 2023-2024
        </p>
        <ul
          class="list-disc list-inside list-indent space-y-2 text-gray-700 dark:text-gray-300"
        >
          <li>{t('experience.gdt.description1')}</li>
          <li>
            {t('experience.gdt.description2')}
          </li>
          <li>{t('experience.gdt.description3')}</li>
          <li>{t('experience.gdt.description4')}</li>
